# Git configuration
# Run ./scripts/setup-git.sh to set up user-specific configuration

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	autoSetupRemote = true

[color]
	ui = auto

[core]
	editor = nvim
	autocrlf = input

[alias]
	# Status and info
	st = status
	s = status -sb
	
	# Commits
	ci = commit
	cm = commit -m
	ca = commit --amend
	can = commit --amend --no-edit
	
	# Branches
	co = checkout
	cob = checkout -b
	br = branch
	bra = branch -a
	
	# Diffs
	d = diff
	ds = diff --staged
	dt = difftool
	
	# Logs
	lg = log --oneline --graph --decorate
	lga = log --oneline --graph --decorate --all
	last = log -1 HEAD
	
	# Common operations
	unstage = reset HEAD --
	undo = reset --soft HEAD~1
	
	# Show aliases
	aliases = config --get-regexp alias

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# User configuration (set by setup-git.sh)
